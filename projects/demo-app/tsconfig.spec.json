{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "../../out-tsc/spec",
    "types": [
      "jasmine"
    ]
  },
  "module": "commonjs",
  "moduleResolution": "node",
  "target": "es2020",
  "types": ["jest","node"],
  "useDefineForClassFields": false,
  "include": [
    "src/**/*.spec.ts",
    "src/**/*.d.ts"
  ]
